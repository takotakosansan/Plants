<div class =container>
  <h4 class = mt-3>お気に入り記事</h4>
  <% @favorite_posts.each do |post|%>
    <table class="table">
      <thead>
        <tr>
          <th>投稿画像</th>
          <th>投稿者</th>
          <th>タイトル</th>
          <th>タグ</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= link_to post_path(post.id) do %><%= image_tag post.get_image(100,100) %><% end %></td>
          <td><%= link_to customer_path(post.customer.id) do %><%= post.customer.name %><% end %></td>
          <td><%= post.name %></td>
          <td><% post.tags.each do |tag| %>
          <%= tag.name %>
          <% end %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
