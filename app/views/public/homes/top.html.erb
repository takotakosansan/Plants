    <%= image_tag "TOP.jpg", size: '400x300'%>
   </div>
 </div><br>
 <h3>新着投稿</h3>
 <div class="row">
   <% @posts.each do |posts| %>
   <div class="col-xs-3 " style="padding-right: 10px; padding-left: 10px;">
