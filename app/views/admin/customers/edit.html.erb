<div class="container">
  <% if @customer.errors.any? %>
    <h4><%= @customer.errors.count %>件のエラーが発生しました</h4>
    <ul>
    <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0"><%= @customer.name %>さんの会員情報編集</h5>
      <div class="form-body p-4">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), class: "w-100" do |f| %>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
          </div>
          <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前"%>
        </div>
        <div class="input-group my-3">
          <label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", class: "w-100" %>
          </label>
          <br>
          <label>
          <p>会員ステータス</p>
          <%= f.radio_button :status, :true %>
          <%= f.label :status, "有効", value: true %>
          <%= f.radio_button :status, :false %>
          <%= f.label :status, "退会", value: false %>
          </label>
        </div>  
        <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-info mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
